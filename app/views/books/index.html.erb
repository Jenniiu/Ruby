
<h1>Books</h1>
<table class="table table-striped
tble-bordered table-hover">
  <thead class="thead-dark">
    <tr> 
      <th> Name </th>
      <th> Author </th>
      <th colspan='3'> </th>
    </tr>
  </thead>

  <tbody>
<div id="books">
  <% @books.each do |book| %>
  <tr>
    <td><%= book.name %>
    </td>
    <td><%= book.autor %>
    </td>
      <td><%= link_to 'Show this book', book %>
      </td>
    <td><%= link_to 'Edit', 
    edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book, method: :delete %></td>
    </tr>
  <% end %>
</div>
</tbody>
</table>
<br>
<%= link_to "New book", new_book_path,
 class:"btn btn-secondary" %>

